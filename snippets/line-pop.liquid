<div id="linebox" class="line-pop when-it-open">
    <a href="https://lin.ee/3EHQbl4"  id="linebox" class="c-coupon__link" target="_blank">
        <div class="line-frame">
            <p class="line-txt">10%OFFクーポンGET</p>
        </div>
        <div class="line-pop__logo">
            <img class="line-icon" src="{{ 'icon-line.webp' | asset_url }}">
            <p id="lineNotice" class="line-pop__logo--notice no_notice">1</p>
        </div>
    </a>
</div>

<style>
/* LINE用 */
.line-pop {
    position: fixed;
    z-index: 400;
    bottom: 32px;
    right: 60px;
    display: flex;
    align-items: center;
    transition: 2s;
    border-radius: 6px;
}

.when-it-open {
    bottom: -200px;
}

.line-frame {
    border: 1px solid #4cc764;
    border-radius: 10px;
    color: #4cc764;
    background-color: #fff;
    height: 38px;
    line-height: 38px;
    width: 240px;
}

.line-txt {
    color: #4cc764;
    font-size: 10px;
    font-weight: 700;
    padding: 0 8px;
    margin: 0;
    margin-right: 10px;
    font-weight: bold;
    display: flex;
    align-items: center;
}

.line-icon {
    aspect-ratio: 1/1;
    background: no-repeat center center/cover;
    display: block;
    position: absolute;
    right: -16px;
    top: -8px;
    width: 56px;
}



.line-pop__logo--notice {
    position: absolute;
    top: -8px;
    right: -16px;
    margin: 0;
    width: 20px;
    height: 20px;
    font-size: 10px;
    color: #fff;
    background: red;
    border-radius: 50%;
    border: 2px solid #fff;
    color: #fff;
    text-align: center;
    opacity: 1;
    transition: 1s;
}

.no_notice {
    opacity: 0;
}

a {
    cursor: pointer;
    text-decoration: none;
}

@media screen and (max-width: 749px) {
    .line-pop {
        position: fixed;
        z-index: 400;
        bottom: 120px;
        right: 20px;
    }
    .when-it-open {
        bottom: -200px;
    }
}

</style>


<script>
document.addEventListener('DOMContentLoaded', function() {
    const lineNotice = document.getElementById('lineNotice');
    const lineBox = document.getElementById('linebox');

    const whenopen = function () {
        lineBox.classList.remove('when-it-open');
    };

    const linepop = function () {
        lineNotice.classList.remove('no_notice');
    };

    setTimeout(whenopen, 2000);
    setTimeout(linepop, 7000);

    lineBox.addEventListener('click', () => {
        lineNotice.classList.add('no_notice');
    });
});
</script>