	<!-- news -->

	{{ 'c_style.css' | asset_url | stylesheet_tag }}
	{{ 'c_news.css' | asset_url | stylesheet_tag }}

	{% assign blog = section.settings.news_blog %}

	<section class="l-section" id="news">
		<div class="p-section p-news">
			<div class="p-section__inner l-inner">
				<h2 class="p-section__title">{{ section.settings.title }}</h2>
				<ul class="p-news__list c-info__list">
					{% for article in blog.articles limit: 6 %}
					<li class="c-info__item">
						<a href="{{ article.url }}" class="c-info__link">
							<time class="c-info__date" datetime="{{ article.published_at }}">
								{{ article.published_at | date: "%Y.%m.%d" }}
							</time>
							<p class="c-info__title">{{ article.title }}
							</p>
						</a>
					</li>
				{% endfor %}
				</ul>
			</div>
		</div>
	</section>

	{% schema %}
{
  "name": "お知らせ",
  "tag": "section",
  "class": "section",
  "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "タイトル",
			"default": "お知らせ"
		},
		{
			"type": "blog",
			"id": "news_blog",
			"label": "ブログ",
			"info": "ニュースのブログを選んでください"
		}
  ],
  "blocks": [
  ],
  "presets": [
    {
      "name": "お知らせ1"
    }
  ]
}
{% endschema %}

